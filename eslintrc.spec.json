{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "expect": true,
    "assert": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true
  },
  "rules": {
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "no-restricted-syntax": [
      "error",
      "WithStatement"
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "no-unused-vars": 1,
    "arrow-body-style": 1,
    "no-shadow": 1,
    "no-param-reassign": 1,
    "padded-blocks": 0,
    "no-plusplus": 0
  }
}
